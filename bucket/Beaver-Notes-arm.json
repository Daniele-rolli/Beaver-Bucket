      "installer": {
        "script": [
          "& \"$dir\\Beaver-notes.Setup.1.0.0.exe\" /S"
        ]
      },
      "uninstaller": {
        "script": [
          "$ProgramFiles = [Environment]::GetFolderPath(\"ProgramFiles\")",
          "$filepath = \"$ProgramFiles\\Beaver-Notes\\Beaver-Notes.exe\"",
          "if (Test-Path -Path $filepath -PathType Leaf) {",
          "   Remove-Item \"$ProgramFiles\\Beaver-Notes\" -Recurse -Force",
          "   Remove-Item \"$CommonDesktopPath\\Beaver-Notes.lnk\" -Force",
          "   Remove-Item \"$UserProfile\\AppData\\Roaming\\Microsoft\\Windows\\Start Menu\\Programs\\Beaver-Notes.lnk\" -Force",
          "}"
        ]
      }
    },
    "arm64": {
      "url": "https://github.com/Daniele-rolli/Beaver-Notes/releases/download/1.0.0/Beaver-notes.Setup.1.0.0.arm64.exe",
      "hash": "hash_value_for_arm64_installer",
      "installer": {
        "script": [
